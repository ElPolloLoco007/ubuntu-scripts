rsakey() {
    echo "======RSAKEY======"
    echo "1.Generate key"
    echo "2.show key"
    echo "3.exit"
    
    while :; do
        read INPUT_STRING
        case $INPUT_STRING in
            1)
                ssh-keygen -t rsa -b 4096
                echo "1.Generate key"
                echo "2.show key"
                echo "3.exit"
            ;;
            2)
                sudo cat ~/.ssh/id_rsa.pub
                echo "1.Generate key"
                echo "2.show key"
                echo "3.exit"
            ;;
            3)
                break
            ;;
            *)
                echo "pick 1, 2 or 3"
            ;;
        esac
    done
    echo
    echo "remember to copy your key to github"
}

echo "==Do you wish to setup RSA key?=="
select yn in "Yes" "No"; do
    case $yn in
        Yes)
            rsakey
            break
        ;;
        No) break ;;
    esac
done

