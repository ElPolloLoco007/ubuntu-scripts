#!/bin/bash

function cd() {
    builtin cd "$@" && ls -F
    pwd
}

mcd() {
    mkdir -p $1
    cd $1
}

update() {
    echo ""
    echo "=UPDATE="
    sudo apt-get update
    echo ""
    echo "=UPGRADE="
    sudo apt-get upgrade
    echo ""
    echo "=dist-upgrade="
    sudo apt-get dist-upgrade
    echo ""
    echo "=UPDATING BASH SCRIPTS="
    
    sudo rm  /usr/local/bin/functions
    sudo rm /usr/local/bin/alias
    sudo rm /usr/local/bin/directories
    sudo rm -r ~/Pictures/wallpapers/
    
    sudo cp -r ~/Dropbox/wallpapers/ ~/Pictures/

    sudo cp ~/Dropbox/scripts/functions /usr/local/bin
    echo "updated:functions"
    sudo cp ~/Dropbox/scripts/alias /usr/local/bin
    echo "updated:alias"
    sudo cp ~/Dropbox/scripts/directories /usr/local/bin
    echo "updated:directories"
    

    source ~/.bashrc
    echo ""
    
    case $HOSTNAME in
        (helgi-u-pc)
    ;;
    (helgi-u-laptop)
    sudo rm /usr/local/bin/techcare
    sudo cp ~/Dropbox/scripts/techcare /usr/local/bin
    echo "updated:techcare"
    
;;
(*)   echo "How did I get in the middle of nowhere?";;
esac
    
    
    echo "==Do you wish to clean?=="
    select yn in "Yes" "No"; do
        case $yn in
            Yes)
                sudo du -sh /var/cache/apt/archives
                sudo apt-get clean
                sudo apt-get autoremove --purge
                break
            ;;
            No) break ;;
        esac
    done
}

function shutDownTimer() {
    echo "======shutDown======"
    echo "1.Timer"
    echo "2.Clock (1:00)"
    echo "3.Now"
    echo "4.Cancel"
    echo "5.Exit"
    
    while :; do
        read -p "Make your choise:" INPUT_STRING
        case $INPUT_STRING in
            1)
                read -p "How many minutes:" TIME
                sudo shutdown -P +$TIME
                break
            ;;
            2)
                read -p "What time:"CLOCK
                sudo shutdown -P $CLOCK
                break
            ;;
            3)
                sudo shutdown -P now
                break
            ;;
            4)
                sudo shutdown -c
                break
            ;;
            5)
                break
            ;;
            *)
                echo "pick 1, 2, 3, 4 or 5"
            ;;
        esac
    done
    echo
    exit
}
